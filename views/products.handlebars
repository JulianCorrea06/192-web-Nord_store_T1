<div class="filter">
  <h5>Ordernar por:</h5>
          <select name="sort" class="filter__select">
            <option value="none">Ninguno</option>
            <option value="mayor_precio">Mayor Precio</option>
            <option value="menor_precio">Menor Precio</option>
            <option value="mayor_popularidad">Mayor Popularidad</option>
            <option value="mayor_tamaño">Mayor Tamaño</option>
            <option value="menor_tamaño">Menor Tamaño</option>
          </select>
     
</div>

   <hr class="filter_line">


<section class="options">
    <h2 class="title">TIENDA</h2>
    <h3 class="subtitle"> Rango de Precio</h3>
    <input class="buffer__slider" type="range" value="0" min="100" max="21000000" autocomplete="off">
    <div class="buffer__label"> </div>

    <h3 class="subtitle"> Estilo</h3>
    <form class="options__form">
       <p class="form__text"><input class ="selection" type="radio" name="Estilo" value="Clasico"> Clásico<br></p>
       <p class="form__text"> <input type="radio" name="Estilo" value="Novedoso"> Novedoso<br></p>
        
      </form>
    <h3 class="subtitle"> Tamaño</h3>
      <form class="options__form2">
        <p class="form__text"><input class ="selection" type="radio" name="Size" value="Small"> Pequeño<br></p>
        <p class="form__text"> <input type="radio" name="Size" value="Medium"> Medio<br></p>
        <p class="form__text"> <input type="radio" name="Size" value="Big"> Grande<br></p>
        <p class="form__text"> <input type="radio" name="Size" value="VeryBig"> Muy grande<br></p>
         
       </form>

</section>  

<section class="products">
{{#each products}}
<div class="items">
        <div class="item">
            <Button class="itemBtn"><a href="/store/{{this._id}}"><img class="item_img" src="data{{image}}" alt="item_img"></Button></a></Button>
            <div class="name">{{name}}</div>
            <div class="price">$ {{price}}</div>
            <Button data-id="{{_id}}" class="kart_btn"><img class="kart" src="/data/kart.png" alt="kart"></Button>
        </div>
</div>
{{/each}}
</section>






<script src="/scripts/store.js"> </script>